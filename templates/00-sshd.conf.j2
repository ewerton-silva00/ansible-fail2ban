# {{ ansible_managed }}

[DEFAULT]
bantime = {{ fail2ban_bantime | default('3600') }}
findtime = {{ fail2ban_findtime | default('600') }}
maxretry = {{ fail2ban_maxretry | default('3') }}
ignoreip = {{ fail2ban_ignoreips | join(' ') }}

[sshd]
enabled = true
port = ssh
filter = sshd
logpath = %(sshd_log)s
action = iptables[name=SSH, port=ssh, protocol=tcp]